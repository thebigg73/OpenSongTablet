<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    style="FullscreenBottomSheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.garethevans.church.opensongtablet.customviews.DialogHeader
            android:id="@+id/dialogHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:isScrollContainer="true"
                android:orientation="vertical">

                <com.garethevans.church.opensongtablet.customviews.MyMaterialTextView
                    android:id="@+id/createSet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/set_new_info"
                    custom:mydrawable="@drawable/set_edit"
                    android:padding="12dp"
                    android:text="@string/set_new" />

                <com.garethevans.church.opensongtablet.customviews.MyMaterialTextView
                    android:id="@+id/manageSet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/set_manage_info"
                    custom:mydrawable="@drawable/database"
                    android:padding="12dp"
                    android:text="@string/set_manage" />

                <com.garethevans.church.opensongtablet.customviews.MyMaterialTextView
                    android:id="@+id/addScripture"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/bible_verse"
                    custom:mydrawable="@drawable/bible"
                    android:padding="12dp"
                    android:text="@string/scripture" />

                <com.garethevans.church.opensongtablet.customviews.MyMaterialTextView
                    android:id="@+id/addCustom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/add_custom_slide"
                    custom:mydrawable="@drawable/list_bullet"
                    android:padding="12dp"
                    android:text="@string/custom_slide" />

                <com.garethevans.church.opensongtablet.customviews.MyMaterialTextView
                    android:id="@+id/randomSong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/random_song_info"
                    android:padding="12dp"
                    android:text="@string/random_song"
                    custom:mydrawable="@drawable/folder_search" />

                <com.garethevans.church.opensongtablet.customviews.MyMaterialTextView
                    android:id="@+id/shuffleSet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/set_shuffle_info"
                    custom:mydrawable="@drawable/shuffle"
                    android:padding="12dp"
                    android:text="@string/set_shuffle" />

                <com.garethevans.church.opensongtablet.customviews.MyMaterialTextView
                    android:id="@+id/sortSet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/alphabetical_sort"
                    custom:mydrawable="@drawable/sort"
                    android:padding="12dp"
                    android:text="@string/set_sort" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>