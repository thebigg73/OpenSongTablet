<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/rightbar"
    android:layout_alignParentEnd="true">

    <ScrollView
        android:id="@+id/extrabuttons2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/custom1Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:useCompatPadding="true"
                android:alpha="0.4"
                app:fabSize="mini"
                app:backgroundTint="@color/purple"
                app:borderWidth="0dp"
                android:src="@drawable/ic_help_outline_white_36dp"
                android:visibility="visible"  />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/custom2Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:useCompatPadding="true"
                app:fabSize="mini"
                app:backgroundTint="@color/purple"
                app:borderWidth="0dp"
                android:src="@drawable/ic_help_outline_white_36dp"
                android:alpha="0.4"
                android:visibility="visible" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/custom3Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:useCompatPadding="true"
                app:fabSize="mini"
                app:borderWidth="0dp"
                app:backgroundTint="@color/purple"
                android:src="@drawable/ic_help_outline_white_36dp"
                android:alpha="0.4"
                android:visibility="visible" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/custom4Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.4"
                android:src="@drawable/ic_help_outline_white_36dp"
                android:visibility="visible"
                app:backgroundTint="@color/purple"
                app:borderWidth="0dp"
                app:fabSize="mini"
                app:useCompatPadding="true" />

        </LinearLayout>

    </ScrollView>

    <ScrollView
        android:id="@+id/extrabuttons"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/extrabuttons2"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/chordButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:useCompatPadding="true"
                android:alpha="0.4"
                android:contentDescription="@string/chords"
                app:fabSize="mini"
                app:backgroundTint="@color/purple"
                app:borderWidth="0dp"
                android:src="@drawable/ic_guitar_electric_white_36dp"
                android:visibility="visible"  />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/linkButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:useCompatPadding="true"
                android:alpha="0.4"
                android:contentDescription="@string/link"
                app:fabSize="mini"
                app:backgroundTint="@color/purple"
                app:borderWidth="0dp"
                android:src="@drawable/ic_link_white_36dp"
                android:visibility="visible"  />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/stickyButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:useCompatPadding="true"
                app:fabSize="mini"
                app:backgroundTint="@color/purple"
                app:borderWidth="0dp"
                android:src="@drawable/ic_comment_text_white_36dp"
                android:alpha="0.4"
                android:visibility="visible"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/notationButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:useCompatPadding="true"
                app:fabSize="mini"
                app:backgroundTint="@color/purple"
                app:borderWidth="0dp"
                android:src="@drawable/ic_clef_white_36dp"
                android:alpha="0.4"
                android:visibility="visible" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/highlightButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:useCompatPadding="true"
                app:backgroundTint="@color/purple"
                app:borderWidth="0dp"
                app:fabSize="mini"
                android:src="@drawable/ic_highlighter_white_36dp"
                android:alpha="0.4"
                android:visibility="visible" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/pageselectButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:useCompatPadding="true"
                android:layout_marginBottom="0dp"
                app:fabSize="mini"
                app:borderWidth="0dp"
                app:backgroundTint="@color/purple"
                android:src="@drawable/ic_book_white_36dp"
                android:alpha="0.4"
                android:visibility="visible" />

        </LinearLayout>

    </ScrollView>

    <ScrollView
        android:id="@+id/mainbuttons"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end|top"
        android:layout_toEndOf="@id/extrabuttons"
        android:visibility="visible"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="end">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/setButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:useCompatPadding="true"
                app:fabSize="mini"
                app:backgroundTint="@color/purple"
                app:borderWidth="0dp"
                android:contentDescription="@string/set"
                android:tag="togglePlayPads"
                android:src="@drawable/ic_format_list_numbers_white_36dp"
                android:alpha="0.4"
                android:visibility="visible" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/padButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:useCompatPadding="true"
                app:backgroundTint="@color/purple"
                app:fabSize="mini"
                android:contentDescription="@string/pad_onoroff"
                android:tag="togglePlayPads"
                android:src="@drawable/ic_amplifier_white_36dp"
                android:alpha="0.4"
                android:visibility="visible" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/autoscrollButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                app:useCompatPadding="true"
                app:backgroundTint="@color/purple"
                app:borderWidth="0dp"
                app:fabSize="mini"
                android:src="@drawable/ic_rotate_right_white_36dp"
                android:alpha="0.4"
                android:visibility="visible" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/metronomeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                app:useCompatPadding="true"
                app:backgroundTint="@color/purple"
                app:borderWidth="0dp"
                app:fabSize="mini"
                android:src="@drawable/ic_pulse_white_36dp"
                android:alpha="0.4"
                android:visibility="visible" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/chordButton_ungrouped"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                app:useCompatPadding="true"
                app:backgroundTint="@color/purple"
                app:borderWidth="0dp"
                app:fabSize="mini"
                android:src="@drawable/ic_guitar_electric_white_36dp"
                android:alpha="0.4"
                android:visibility="visible" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/linkButton_ungrouped"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                app:useCompatPadding="true"
                app:backgroundTint="@color/purple"
                app:borderWidth="0dp"
                app:fabSize="mini"
                android:src="@drawable/ic_link_white_36dp"
                android:alpha="0.4"
                android:visibility="visible" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/stickyButton_ungrouped"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                app:useCompatPadding="true"
                app:backgroundTint="@color/purple"
                app:borderWidth="0dp"
                app:fabSize="mini"
                android:src="@drawable/ic_comment_text_white_36dp"
                android:alpha="0.4"
                android:visibility="visible" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/notationButton_ungrouped"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                app:useCompatPadding="true"
                app:backgroundTint="@color/purple"
                app:borderWidth="0dp"
                app:fabSize="mini"
                android:src="@drawable/ic_clef_white_36dp"
                android:alpha="0.4"
                android:visibility="visible" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/highlightButton_ungrouped"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                app:useCompatPadding="true"
                app:backgroundTint="@color/purple"
                app:borderWidth="0dp"
                app:fabSize="mini"
                android:src="@drawable/ic_highlighter_white_36dp"
                android:alpha="0.4"
                android:visibility="visible" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/pageselectButton_ungrouped"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                app:useCompatPadding="true"
                app:backgroundTint="@color/purple"
                app:borderWidth="0dp"
                app:fabSize="mini"
                android:src="@drawable/ic_book_white_36dp"
                android:alpha="0.4"
                android:visibility="visible" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/extraButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                app:useCompatPadding="true"
                app:backgroundTint="@color/purple"
                app:borderWidth="0dp"
                app:fabSize="mini"
                android:src="@drawable/ic_information_white_36dp"
                android:alpha="0.4"
                android:visibility="visible" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/custom1Button_ungrouped"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                app:useCompatPadding="true"
                app:backgroundTint="@color/purple"
                app:borderWidth="0dp"
                app:fabSize="mini"
                android:src="@drawable/ic_help_outline_white_36dp"
                android:alpha="0.4"
                android:visibility="visible" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/custom2Button_ungrouped"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                app:useCompatPadding="true"
                app:backgroundTint="@color/purple"
                app:borderWidth="0dp"
                app:fabSize="mini"
                android:src="@drawable/ic_help_outline_white_36dp"
                android:alpha="0.4"
                android:visibility="visible" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/custom3Button_ungrouped"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                app:useCompatPadding="true"
                app:backgroundTint="@color/purple"
                app:borderWidth="0dp"
                app:fabSize="mini"
                android:src="@drawable/ic_help_outline_white_36dp"
                android:alpha="0.4"
                android:visibility="visible" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/custom4Button_ungrouped"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                app:useCompatPadding="true"
                app:backgroundTint="@color/purple"
                app:borderWidth="0dp"
                app:fabSize="mini"
                android:src="@drawable/ic_help_outline_white_36dp"
                android:alpha="0.4"
                android:visibility="visible" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/customButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                app:useCompatPadding="true"
                app:backgroundTint="@color/purple"
                app:borderWidth="0dp"
                app:fabSize="mini"
                android:src="@drawable/ic_bullseye_white_36dp"
                android:alpha="0.4"
                android:visibility="visible" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>